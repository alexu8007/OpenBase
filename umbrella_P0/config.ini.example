[App]
# The weather provider to use. Options: "nws", "openweathermap"
provider = nws

[Location]
# Set a default location. Can be a city name or lat/lon.
# Examples: "New York, NY", "40.7128,-74.0060"
default_location = New York, NY

[API_Keys]
# Sign up at https://openweathermap.org/ to get a free API key
openweathermap = YOUR_API_KEY_HERE

[Caching]
# Enable or disable caching. Options: true, false
enabled = true
# Cache duration in seconds
ttl = 600

[Notifications]
# Comma-separated list of notifiers to use. Options: "console", "email"
notifiers = console

[SMTP]
# Configuration for the email notifier
host = smtp.example.com
port = 587
username = your_email@example.com
password = your_password
# The email address to send notifications from
from_address = your_email@example.com
# The email address to send notifications to
to_address = recipient_email@example.com
use_tls = true 